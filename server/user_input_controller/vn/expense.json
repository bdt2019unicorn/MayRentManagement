{
    "title": "Expense",
    "form":
    [
        [
            {
                "component": "TextInput",
                "name": "name",
                "title": "Name *"
            },
            {
                "component": "SelectInput",
                "name": "expense_type_id",
                "title": "Type *",
                "overview_controller": "expense_type",
                "select_value": "id",
                "text": "name"
            }, 
            {
                "component": "SelectInput",
                "name": "building_id",
                "title": "Building *",
                "overview_controller": "buildings",
                "select_value": "id",
                "text": "name"
            }
        ],
        [
            {
                "component": "DateGroup",
                "name": "period", 
                "date_data":
                {
                    "small_date":
                    {
                        "name": "start_period",
                        "title": "Start Period",
                        "presence": true,
                        "message": "The start period should be before the end period"
                    },
                    "big_date":
                    {
                        "name": "end_period",
                        "title": "End Period",
                        "presence": true,
                        "message": "The end period should be after the start period"
                    }
                }
            }
        ],
        [
            {
                "component": "NumberInput",
                "name": "amount",
                "title": "Amount *"
            },
            {
                "component": "DateInput",
                "name": "payment_date",
                "title": "Payment Date"
            }
        ],
        [
            {
                "component": "TextareaInput",
                "name": "note",
                "title": "Note"
            }
        ]
    ],
    "validate":
    {
        "rules":
        {
            "name":             
            {
                "presence": true
            },
            "expense_type_id":             
            {
                "presence": true
            },
            "building_id":             
            {
                "presence": true
            },
            "amount":
            {
                "presence": true, 
                "number_input_min": 0 
            } 
        }
    }
}