{
    "title": "Contract",
    "form":
    [
        [
            {
                "component": "TextInput",
                "name": "name",
                "title": "Agreement Number *"
            },
            {
                "component": "SelectInput",
                "name": "tenant_id",
                "title": "Tenant *",
                "overview_controller": "tenant",
                "select_value": "id",
                "text": "Full Name"
            },
            {
                "component": "SelectInput",
                "name": "unit_id",
                "title": "Unit *",
                "overview_controller": "unit",
                "select_value": "id",
                "text": "name"
            }
        ],
        [
            {
                "component": "MultiSelectInput",
                "name": "ocupants_ids",
                "title": "Ocupants",
                "overview_controller": "tenant",
                "select_atributes": 
                {
                    "clear-on-select": false, 
                    "close-on-select": false, 
                    "hideSelected": true, 
                    "label": "Full Name", 
                    "multiple": true, 
                    "openDirection": "bottom", 
                    "placeholder": "", 
                    "selectLabel": "", 
                    "tagPlaceholder": "", 
                    "track-by": "id"
                }
            }
        ], 
        [
            {
                "component": "DateGroup",
                "name": "rent_date_group", 
                "date_data":
                {
                    "small_date":
                    {
                        "name": "start_date",
                        "title": "Start Date",
                        "presence": true,
                        "message": "The start date should be before the end date"
                    },
                    "big_date":
                    {
                        "name": "finish",
                        "title": "End Date",
                        "presence": true,
                        "message": "The end date should be after the start date"
                    }
                }
            }
        ],
        [
            {
                "component": "NumberInput",
                "name": "rent_amount",
                "title": "Rent Amount *"
            },
            {
                "component": "NumberInput",
                "name": "deposit_amount",
                "title": "Deposit Amount *"
            }
        ],
        [
            {
                "component": "DateGroup",
                "name": "deposit_date_group", 
                "date_data":
                {
                    "small_date":
                    {
                        "name": "deposit_payment_date",
                        "title": "Deposit Payment Date",
                        "message": "The deposite payment date should be before the deposite payback date"
                    },
                    "big_date":
                    {
                        "name": "deposit_payback_date",
                        "title": "Deposit Payback Date",
                        "message": "The deposite payback date should be after the deposite payment date"
                    }
                }
            }
        ],
        [
            {
                "component": "NumberInput",
                "name": "monthly_payment_date",
                "title": "Monthly Payment Date *"
            },
            {
                "component": "SelectInput",
                "name": "leaseagrm_period_id",
                "title": "Payment Period *",
                "overview_controller": "leaseagrm_period",
                "select_value": "id",
                "text": "name"
            }
        ], 
        [
            {
                "component": "TextInput",
                "name": "deposit_currency",
                "title": "Deposit Currency"
            },
            {
                "component": "NumberInput",
                "name": "deposit_exchange_rate",
                "title": "Deposit Exchange Rate"
            }
        ],
        [
            {
                "component": "TextareaInput",
                "name": "note",
                "title": "Note"
            }
        ]
    ],
    "validate":
    {
        "rules":
        {
            "name":             
            {
                "presence": true
            },
            "tenant_id":             
            {
                "presence": true
            },
            "unit_id":             
            {
                "presence": true
            },
            "rent_amount": 
            {
                "presence": true, 
                "number_input_min": 0 
            }, 
            "leaseagrm_period_id":             
            {
                "presence": true
            }, 
            "deposit_amount":
            {
                "presence": true, 
                "number_input_min": 0 
            },  
            "monthly_payment_date":
            {
                "presence": true,
                "step": 1,
                "min": 1,
                "max": 28
            }, 
            "deposit_exchange_rate": 
            {
                "number_input_min": 0 
            }
        }
    }
}