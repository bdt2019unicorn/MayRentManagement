{
    "title": "Contract",
    "form":
    [
        [
            {
                "component": "TextInput",
                "name": "name",
                "title": "Agreement Number *"
            },
            {
                "component": "SelectInput",
                "name": "tenant_id",
                "title": "Tenant *",
                "overview_controller": "tenant",
                "select_value": "id",
                "text": "Full Name"
            },
            {
                "component": "SelectInput",
                "name": "unit_id",
                "title": "Unit *",
                "overview_controller": "unit",
                "select_value": "id",
                "text": "name"
            }
        ],
        [
            {
                "component": "MultiSelectInput",
                "name": "ocupants_ids",
                "title": "Ocupants",
                "overview_controller": "tenant",
                "select_atributes": 
                {
                    "clear-on-select": false, 
                    "close-on-select": false, 
                    "hideSelected": true, 
                    "label": "Full Name", 
                    "multiple": true, 
                    "openDirection": "bottom", 
                    "placeholder": "", 
                    "selectLabel": "", 
                    "tagPlaceholder": "", 
                    "track-by": "id"
                }
            }
        ], 
        [
            {
                "component": "DateGroup",
                "name": "rent_date_group", 
                "date_data":
                {
                    "small_date":
                    {
                        "name": "start_date",
                        "title": "Start Date"
                    },
                    "big_date":
                    {
                        "name": "finish",
                        "title": "End Date"
                    }
                }
            }
        ],
        [
            {
                "component": "NumberInput",
                "name": "rent_amount",
                "title": "Rent Amount *"
            },
            {
                "component": "NumberInput",
                "name": "deposit_amount",
                "title": "Deposit Amount *"
            }
        ],
        [
            {
                "component": "DateGroup",
                "name": "deposit_date_group", 
                "date_data":
                {
                    "small_date":
                    {
                        "name": "deposit_payment_date",
                        "title": "Deposit Payment Date",
                        "message": "The deposite payment date should be before the deposite payback date"
                    },
                    "big_date":
                    {
                        "name": "deposit_payback_date",
                        "title": "Deposit Payback Date",
                        "message": "The deposite payback date should be after the deposite payment date"
                    }
                }
            }
        ],
        [
            {
                "component": "NumberInput",
                "name": "monthly_payment_date",
                "title": "Monthly Payment Date *"
            },
            {
                "component": "SelectInput",
                "name": "leaseagrm_period_id",
                "title": "Payment Period *",
                "overview_controller": "leaseagrm_period",
                "select_value": "id",
                "text": "name"
            }
        ], 
        [
            {
                "component": "TextInput",
                "name": "deposit_currency",
                "title": "Deposit Currency"
            },
            {
                "component": "NumberInput",
                "name": "deposit_exchange_rate",
                "title": "Deposit Exchange Rate"
            }
        ],
        [
            {
                "component": "TextareaInput",
                "name": "note",
                "title": "Note"
            }
        ]
    ],
    "validate":
    {
        "rules":
        {
            "name":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }
            },
            "tenant_id":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }
            },
            "unit_id":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }
            },
            "start_date": 
            {
                "smallDate": 
                {
                    "attribute": "finish", 
                    "message": "Ngày bắt đầu hợp đồng phải nhỏ hơn ngày kết thúc hợp đồng", 
                    "presence": "Ngày bắt đầu hợp đồng để trống"
                }
            }, 
            "finish": 
            {
                "bigDate": 
                {
                    "attribute": "start_date", 
                    "message": "Ngày kết thúc hợp đồng phải lớn hơn ngày bắt đầu hợp đồng", 
                    "presence": "Ngày kết thúc hợp đồng để trống"
                }
            }, 
            "rent_amount": 
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }, 
                "numericality": 
                {
                    "greaterThan": 0, 
                    "message": "Diện tích phải lớn hơn 0" 
                }
            }, 
            "leaseagrm_period_id":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }
            }, 
            "deposit_amount":
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }, 
                "numericality": 
                {
                    "greaterThan": 0, 
                    "message": "Diện tích phải lớn hơn 0" 
                }
            },  
            "monthly_payment_date":
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }, 
                "step":
                {
                    "attribute": 1, 
                    "message": "Ngày trả tiền mỗi tháng phải chia hết cho 1"
                }, 
                "numeric": 
                { 
                    "greaterThanOrEqualTo": 
                    {
                        "attribute": 1, 
                        "message": "Ngày trả tiền mỗi tháng phải nhỏ hơn hoặc bằng 1"
                    }, 
                    "lessThanOrEqualTo": 
                    {
                        "attribute": 28, 
                        "message": "Ngày trả tiền mỗi tháng phải lớn hơn hoặc bằng 28"
                    }
                }
            }, 
            "deposit_exchange_rate": 
            {
                "numericality": 
                {
                    "greaterThan": 0, 
                    "message": "Diện tích phải lớn hơn 0" 
                }
            }
        }
    }
}