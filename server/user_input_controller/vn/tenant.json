{
    "title": "Người thuê nhà",
    "form":
    [
        [
            {
                "component": "TextInput",
                "name": "first_name",
                "title": "Tên"
            },
            {
                "component": "TextInput",
                "name": "middle_name",
                "title": "Tên đệm"
            },
            {
                "component": "TextInput",
                "name": "last_name",
                "title": "Họ"
            },
            {
                "component": "DateInput",
                "name": "date_of_birth",
                "title": "Ngày sinh"
            }
        ],
        [
            {
                "component": "TextInput",
                "name": "passport_id_number",
                "title": "Số hộ chiếu/CMND"
            },
            {
                "component": "TextInput",
                "name": "Nationality",
                "title": "Quốc tịch"
            }, 
            {
                "component": "DateInput",
                "name": "visa_expiry_date",
                "title": "Ngày hết hạn thị thực" 
            }
        ],
        [
            {
                "component": "SelectInput",
                "name": "building_id",
                "title": "Tòa nhà",
                "overview_controller": "buildings",
                "select_value": "id",
                "text": "name"
            }, 
            {
                "component": "DateInput",
                "name": "police_registration_date",
                "title": "Ngày khai tạm trú qua mạng" 
            },             
            {
                "component": "DateInput",
                "name": "expected_departure_date",
                "title": "Ngày đi dự kiến đăng ký với CA" 
            }
        ], 
        [
            {
                "component": "TextInput",
                "name": "mobile_phone",
                "title": "Số điện thoại"
            },
            {
                "component": "TextInput",
                "name": "work_phone",
                "title": "Số điện thoại công ti"
            }
        ],
        [
            {
                "component": "TextInput",
                "name": "personal_email",
                "title": "Địa chỉ email"
            },
            {
                "component": "TextInput",
                "name": "work_email",
                "title": "Địa chỉ email công ti"
            }
        ],
        [
            {
                "component": "TextInput",
                "name": "company_name",
                "title": "Tên công ti"
            },
            {
                "component": "TextInput",
                "name": "company_address",
                "title": "Địa chỉ công ti"
            }
        ],
        [
            {
                "component": "TextareaInput",
                "name": "note",
                "title": "Ghi chú"
            }
        ]
    ],
    "validate":
    {
        "rules":
        {
            "last_name":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Họ người thuê để trống"
                }
            },
            "date_of_birth": 
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Ngày sinh để trống"
                }
            }, 
            "passport_id_number":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Số hộ chiếu/CMND để trống"
                }
            },
            "Nationality":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Quốc tịch để trống"
                }
            }, 
            "building_id":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Người thuê nhà không thuộc nhà nào"
                }
            }, 
            "mobile_phone":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Số điện thoại để trống"
                }
            },
            "personal_email": 
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Địa chỉ email để trống"
                }, 
                "email": true 
            }, 
            "work_email": 
            {
                "notRequiredEmail": 
                {
                    "message": "Định dạng không phải email"
                } 
            }, 
            "company_name":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Tên công ti để trống"
                }
            }
        }
    }
}