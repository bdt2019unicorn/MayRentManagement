{
    "title": "Đơn vị",
    "form":
    [
        [
            {
                "component": "TextInput",
                "name": "name",
                "title": "Mã số đơn vị"
            },
            {
                "component": "SelectInput",
                "name": "building_id",
                "title": "Tòa nhà",
                "overview_controller": "buildings",
                "select_value": "id",
                "text": "name"
            }
        ],
        [
            {
                "component": "NumberInput",
                "name": "area",
                "title": "Diện tích"
            },
            {
                "component": "NumberInput",
                "name": "number_of_bedrooms",
                "title": "Số phòng ngủ"
            },
            {
                "component": "NumberInput",
                "name": "number_of_bathroom",
                "title": "Số phòng tắm"
            },
            {
                "component": "NumberInput",
                "name": "number_of_windows",
                "title": "Số cửa sổ"
            }
        ], 
        [
            {
                "component": "CheckboxInput",
                "name": "balcony",
                "title": "Ban công"
            }
        ],
        [
            {
                "component": "TextareaInput",
                "name": "note",
                "title": "Ghi chú"
            }
        ]
    ],
    "validate":
    {
        "rules":
        {
            "name":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Mã số đơn vị để trống"
                }
            },
            "building_id":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Tên tòa nhà để trống"
                }
            }, 
            "area": 
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }, 
                "numericality": 
                {
                    "greaterThan": 
                    {
                        "attribute": 0,
                        "message":"Diện tích phải lớn hơn 0" 
                    }
                }
            }, 
            "number_of_bedrooms": 
            {
                "presence": true, 
                "number_input_min": 0, 
                "number_input_integer": true 
            }, 
            "number_of_bathroom": 
            {
                "presence": true, 
                "number_input_min": 0, 
                "number_input_integer": true 
            }, 
            "number_of_windows": 
            {
                "presence": true, 
                "number_input_min": 0, 
                "number_input_integer": true 
            }
        }
    }
}
