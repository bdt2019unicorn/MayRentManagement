{
    "title": "Đơn vị",
    "form":
    [
        [
            {
                "component": "TextInput",
                "name": "name",
                "title": "Mã số đơn vị"
            },
            {
                "component": "SelectInput",
                "name": "building_id",
                "title": "Tòa nhà",
                "overview_controller": "buildings",
                "select_value": "id",
                "text": "name"
            }
        ],
        [
            {
                "component": "NumberInput",
                "name": "area",
                "title": "Diện tích"
            },
            {
                "component": "NumberInput",
                "name": "number_of_bedrooms",
                "title": "Số phòng ngủ"
            },
            {
                "component": "NumberInput",
                "name": "number_of_bathroom",
                "title": "Số phòng tắm"
            },
            {
                "component": "NumberInput",
                "name": "number_of_windows",
                "title": "Số cửa sổ"
            }
        ], 
        [
            {
                "component": "CheckboxInput",
                "name": "balcony",
                "title": "Ban công"
            }
        ],
        [
            {
                "component": "TextareaInput",
                "name": "note",
                "title": "Ghi chú"
            }
        ]
    ],
    "validate":
    {
        "rules":
        {
            "name":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Mã số đơn vị để trống"
                }
            },
            "building_id":             
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Tên tòa nhà để trống"
                }
            }, 
            "area": 
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Diện tích để trống"
                }, 
                "numericality": 
                {
                    "greaterThan": 0, 
                    "message": "Diện tích phải lớn hơn 0" 
                }
            }, 
            "number_of_bedrooms": 
            {
                "presence": 
                {
                    "allowEmpty": false, 
                    "message": "Số phòng ngủ để trống"
                },  
                "numericality": 
                {
                    "greaterThan": 0, 
                    "onlyInteger": "Số phòng ngủ phải là số nguyên", 
                    "message": "Số phòng ngủ phải lớn hơn 0" 
                }
            }, 
            "number_of_bathroom": 
            {
                "presence":                 
                {
                    "allowEmpty": false, 
                    "message": "Số phòng tắm để trống"
                },  
                "numericality": 
                {
                    "greaterThan": 0, 
                    "onlyInteger": "Số phòng tắm phải là số nguyên", 
                    "message": "Số phòng tắm phải lớn hơn 0" 
                }
            }, 
            "number_of_windows": 
            {
                "presence":                 
                {
                    "allowEmpty": false, 
                    "message": "Số cửa sổ để trống"
                },  
                "numericality": 
                {
                    "greaterThan": 0, 
                    "onlyInteger": "Số cửa sổ phải là số nguyên", 
                    "message": "Số cửa sổ phải lớn hơn 0" 
                }
            }
        }
    }
}
